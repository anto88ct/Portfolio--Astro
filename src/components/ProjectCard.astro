---
interface Props {
    title: string;
    description: string;
    role?: string;
    tags: string[];
    imageColor: string;
    link?: string;
    logoPlaceholder?: string;
}

const { title, description, role, tags, imageColor, link, logoPlaceholder } =
    Astro.props;
---

<article
    class="group relative bg-slate-900/50 rounded-2xl border border-slate-800 hover:border-indigo-500/50 transition-all duration-300 overflow-hidden hover:shadow-2xl hover:shadow-indigo-500/10 flex flex-col h-full"
>
    <!-- Image/Placeholder Section -->
    <div
        class={`h-56 w-full bg-gradient-to-br ${imageColor} relative overflow-hidden group-hover:scale-[1.02] transition-transform duration-500`}
    >
        <div
            class="absolute inset-0 bg-slate-950/20 group-hover:bg-transparent transition-colors duration-300"
        >
        </div>

        <!-- Logo Placeholder -->
        <div class="absolute inset-0 flex items-center justify-center">
            <div
                class="bg-white/10 backdrop-blur-md border border-white/20 p-4 rounded-xl transform group-hover:-translate-y-2 transition-transform duration-300"
            >
                <span
                    class="text-3xl font-black text-white tracking-widest block"
                    >{
                        logoPlaceholder || title.substring(0, 2).toUpperCase()
                    }</span
                >
            </div>
        </div>
    </div>

    <div class="p-8 flex flex-col flex-grow">
        <div class="flex items-start justify-between mb-4">
            <div>
                <h3
                    class="text-2xl font-bold text-white mb-1 group-hover:text-indigo-400 transition-colors"
                >
                    {title}
                </h3>
                {
                    role && (
                        <span class="text-sm font-medium text-indigo-400/80">
                            {role}
                        </span>
                    )
                }
            </div>
            {
                link && (
                    <a
                        href={link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="p-2 text-slate-400 hover:text-white hover:bg-slate-800 rounded-full transition-colors"
                        aria-label={`Visit ${title}`}
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="feather feather-external-link"
                        >
                            <>
                                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                <polyline points="15 3 21 3 21 9" />
                                <line x1="10" y1="14" x2="21" y2="3" />
                            </>
                        </svg>
                    </a>
                )
            }
        </div>

        <p class="text-slate-300 leading-relaxed mb-6 flex-grow">
            {description}
        </p>

        <div class="mt-auto">
            <div class="flex flex-wrap gap-2">
                {
                    tags.map((tag) => (
                        <span class="px-3 py-1 text-xs font-medium rounded-full bg-slate-800/80 text-indigo-300 border border-slate-700/50">
                            {tag}
                        </span>
                    ))
                }
            </div>
        </div>
    </div>
</article>
