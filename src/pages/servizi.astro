---
import MainLayout from "../layouts/MainLayout.astro";
import InteractiveBackground from "../components/InteractiveBackground.astro";

const services = [
    {
        title: "Consulenza Gratuita",
        price: "Gratis",
        description:
            "Call o email per analizzare le tue esigenze e progettare la soluzione ideale per te.",
        features: [
            "Analisi requisiti",
            "Progettazione architetturale",
            "Studio di fattibilità",
            "Consigli su tecnologie",
        ],
        cta: "Prenota ora",
        highlight: false,
    },
    {
        title: "Landing Page",
        price: "€500",
        description:
            "Creazione di una landing page professionale per la vetrina del tuo negozio o attività.",
        features: [
            "Design moderno e responsive",
            "Ottimizzazione SEO base",
            "Copywriting persuasivo",
            "Form di contatto",
            "Analisi performance",
        ],
        cta: "Chiedi preventivo",
        highlight: false,
    },
    {
        title: "Landing + Booking",
        price: "€900",
        description:
            "Vetrina completa con landing page e sistema di prenotazione appuntamenti integrato.",
        features: [
            "Tutto del pacchetto Landing",
            "Sistema prenotazioni online",
            "Gestione orari e disponibilità",
            "Notifiche email automatiche",
            "Sincronizzazione calendario",
        ],
        cta: "Chiedi preventivo",
        highlight: true,
    },
    {
        title: "Full Suite",
        price: "€1400",
        description:
            "Landing, Booking e Dashboard avanzata per la gestione completa del flusso clienti.",
        features: [
            "Tutto del pacchetto Booking",
            "Dashboard amministrativa",
            "Reportistica e Analytics",
            "Gestione anagrafica clienti",
            "Storico appuntamenti",
        ],
        cta: "Contattami",
        highlight: false,
    },
    {
        title: "Soluzione Custom",
        price: "Su Misura",
        description:
            "Hai esigenze specifiche? Sviluppiamo insieme un software cucito sui tuoi bisogni.",
        features: [
            "Analisi approfondita",
            "Sviluppo backend dedicato",
            "Integrazioni API complesse",
            "Architetture scalabili",
            "Supporto prioritario",
        ],
        cta: "Parliamone",
        highlight: false,
    },
];

const benefits = [
    {
        title: "Tempi Brevi",
        description:
            "Il tuo sito web sarà online in tempi rapidi, senza sacrificare la qualità. Lavoro con scadenze chiare e rispettate.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>`,
    },
    {
        title: "Tailor Made",
        description:
            "Ogni soluzione è ritagliata su misura per le tue specifiche esigenze. Non uso template preconfezionati, ma codice cucito su di te.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.24 12.24a6 6 0 0 0-8.49-8.49L5 10.5V19h8.5z"></path><line x1="16" y1="8" x2="2" y2="22"></line><line x1="17.5" y1="15" x2="9" y2="15"></line></svg>`,
    },
    {
        title: "Ready to Use",
        description:
            "Consegno prodotti finiti, testati e pronti all'uso. Non dovrai preoccuparti di configurazioni complesse o setup iniziale.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>`,
    },
    {
        title: "Codice Sicuro",
        description:
            "Sviluppo seguendo le best practices di sicurezza. Il tuo sito sarà protetto e il codice robusto e facilmente manutenibile.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>`,
    },
    {
        title: "Assistenza Inclusa",
        description:
            "Offro assistenza gratuita sui bug riscontrati e scontistiche speciali su future evoluzioni o aggiunta di funzionalità.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path></svg>`,
    },
];
---

<MainLayout title="I Miei Servizi | Antonio D'Arrigo">
    <InteractiveBackground />

    <main class="py-20 max-w-7xl mx-auto px-4 relative overflow-hidden">
        <!-- Hero Section -->
        <div class="text-center mb-16 fade-in">
            <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-6">
                Trasforma la tua <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-blue-500"
                    >Idea Digitale</span
                >
            </h1>
            <p class="text-lg text-slate-300 max-w-2xl mx-auto leading-relaxed">
                Offro soluzioni web complete, dalla semplice landing page a
                sistemi complessi di gestione. Scopri come posso aiutare la tua
                attività a crescere online.
            </p>
        </div>

        <!-- Pricing Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-24">
            {
                services.map((service, index) => (
                    <div
                        class={`relative rounded-2xl p-8 border transition duration-300 flex flex-col h-full fade-in
            ${
                service.highlight
                    ? "bg-slate-900/80 border-indigo-500 shadow-2xl shadow-indigo-500/20 scale-105 z-10"
                    : "bg-slate-950/50 border-slate-800 hover:border-slate-700 hover:bg-slate-900/80"
            }`}
                        style={`transition-delay: ${index * 100}ms`}
                    >
                        {service.highlight && (
                            <div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-indigo-600 text-white px-4 py-1 rounded-full text-sm font-bold shadow-lg">
                                Più Richiesto
                            </div>
                        )}

                        <div class="mb-6">
                            <h3 class="text-xl font-bold text-white mb-2">
                                {service.title}
                            </h3>
                            <div class="text-3xl font-extrabold text-indigo-400">
                                {service.price}
                            </div>
                        </div>

                        <p class="text-slate-400 mb-6 text-sm flex-grow">
                            {service.description}
                        </p>

                        <ul class="space-y-3 mb-8">
                            {service.features.map((feature) => (
                                <li class="flex items-start text-sm text-slate-300">
                                    <svg
                                        class="w-5 h-5 text-indigo-500 mr-2 flex-shrink-0"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M5 13l4 4L19 7"
                                        />
                                    </svg>
                                    {feature}
                                </li>
                            ))}
                        </ul>

                        <a
                            href="/contatti"
                            class={`block w-full py-3 px-6 text-center rounded-lg font-bold transition duration-300
              ${
                  service.highlight
                      ? "bg-indigo-600 text-white hover:bg-indigo-500 hover:shadow-lg hover:shadow-indigo-500/25"
                      : "bg-slate-800 text-white hover:bg-slate-700 border border-slate-700"
              }`}
                        >
                            {service.cta}
                        </a>
                    </div>
                ))
            }
        </div>

        <!-- Responsive Design Showcase -->
        <section class="mb-24 fade-in">
            <div
                class="bg-slate-900/30 border border-slate-800 rounded-2xl p-8 md:p-12 overflow-hidden relative"
            >
                <div
                    class="absolute top-0 right-0 -mr-20 -mt-20 w-96 h-96 bg-indigo-500/10 rounded-full blur-3xl"
                >
                </div>
                <div
                    class="absolute bottom-0 left-0 -ml-20 -mb-20 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"
                >
                </div>

                <div class="text-center mb-12 relative z-10">
                    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
                        Design Responsive & Mobile First
                    </h2>
                    <p class="text-slate-300 max-w-2xl mx-auto">
                        Ogni sito web che realizzo è perfettamente ottimizzato
                        per qualsiasi dispositivo. Dal grande schermo di un
                        desktop al display di uno smartphone, l'esperienza
                        utente sarà sempre impeccabile.
                    </p>
                </div>

                <div
                    class="flex flex-col md:flex-row items-center justify-center gap-8 md:gap-16 relative z-10"
                >
                    <!-- Mobile Mockup -->
                    <div
                        class="group relative w-full max-w-[280px] transform hover:-translate-y-2 transition duration-500"
                    >
                        <div
                            class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-[2rem] blur opacity-30 group-hover:opacity-60 transition duration-500"
                        >
                        </div>
                        <div
                            class="relative bg-slate-950 rounded-[1.8rem] border-4 border-slate-800 overflow-hidden shadow-2xl"
                        >
                            <img
                                src="/images/mobile-mockup.png"
                                alt="Mobile version website mockup"
                                class="w-full h-auto object-cover"
                            />
                            <div
                                class="absolute bottom-0 w-full bg-slate-950/80 backdrop-blur p-3 text-center border-t border-slate-800/50"
                            >
                                <span
                                    class="text-xs font-bold text-indigo-400 uppercase tracking-widest"
                                    >Mobile Optimized</span
                                >
                            </div>
                        </div>
                    </div>

                    <!-- Desktop Mockup -->
                    <div
                        class="group relative w-full max-w-[500px] transform hover:-translate-y-2 transition duration-500 delay-100"
                    >
                        <div
                            class="absolute -inset-1 bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl blur opacity-30 group-hover:opacity-60 transition duration-500"
                        >
                        </div>
                        <div
                            class="relative bg-slate-950 rounded-lg border-2 border-slate-800 overflow-hidden shadow-2xl"
                        >
                            <div
                                class="bg-slate-900 border-b border-slate-800 p-2 flex gap-1.5 pl-4"
                            >
                                <div class="w-3 h-3 rounded-full bg-red-500/50">
                                </div>
                                <div
                                    class="w-3 h-3 rounded-full bg-yellow-500/50"
                                >
                                </div>
                                <div
                                    class="w-3 h-3 rounded-full bg-green-500/50"
                                >
                                </div>
                            </div>
                            <img
                                src="/images/desktop-mockup.png"
                                alt="Desktop version website mockup"
                                class="w-full h-auto object-cover"
                            />
                            <div
                                class="absolute bottom-4 right-4 bg-slate-900/90 backdrop-blur px-4 py-2 rounded-lg border border-slate-700/50"
                            >
                                <span
                                    class="text-xs font-bold text-indigo-400 uppercase tracking-widest"
                                    >Desktop Ready</span
                                >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Why Choose Me -->
        <section class="mb-24">
            <h2
                class="text-3xl md:text-4xl font-bold text-center text-white mb-12 fade-in"
            >
                Perché Scegliere Me?
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    benefits.map((benefit, index) => (
                        <div
                            class="bg-slate-900/50 border border-slate-800 p-6 rounded-xl hover:bg-slate-800/50 transition duration-300 fade-in"
                            style={`transition-delay: ${index * 100}ms`}
                        >
                            <div class="w-12 h-12 bg-indigo-500/10 rounded-lg flex items-center justify-center text-indigo-400 mb-4">
                                <Fragment set:html={benefit.icon} />
                            </div>
                            <h3 class="text-xl font-bold text-white mb-3">
                                {benefit.title}
                            </h3>
                            <p class="text-slate-400 text-sm leading-relaxed">
                                {benefit.description}
                            </p>
                        </div>
                    ))
                }
            </div>
        </section>

        <!-- Client Placeholder -->
        <section>
            <h2
                class="text-3xl md:text-4xl font-bold text-center text-white mb-12 fade-in"
            >
                I Miei Attuali Clienti
            </h2>

            <div
                class="grid grid-cols-2 md:grid-cols-4 gap-8 opacity-50 fade-in"
            >
                {
                    [1, 2, 3, 4].map((i) => (
                        <div class="bg-slate-900 border border-slate-800 h-32 rounded-xl flex items-center justify-center group hover:opacity-100 transition duration-300">
                            <span class="text-slate-600 font-bold text-lg group-hover:text-indigo-400 transition-colors">
                                Client {i}
                            </span>
                        </div>
                    ))
                }
            </div>
            <p class="text-center text-slate-500 mt-6 text-sm">
                Attualmente sto lavorando al mio portfolio e a progetti
                personali. <br />
                Il tuo progetto potrebbe essere il primo qui!
            </p>
        </section>
    </main>
</MainLayout>
