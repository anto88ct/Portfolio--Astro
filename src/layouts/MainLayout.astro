---
import '../styles/global.css';
import '@fontsource/inter';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title?: string;
}

const { title = "Antonio Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Antonio's Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-sans antialiased bg-slate-950 text-slate-50 min-h-screen">
		<Navbar />
		<div class="pt-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 min-h-[calc(100vh-80px)]">
			<slot />
		</div>
		<Footer />
	</body>
</html>
